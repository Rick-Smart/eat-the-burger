<div class="p-3 mb-2 bg-dark bg-gradient text-white">
    <h1 class="title">Big Burgers! </h1>
    <img class="rounded mx-auto d-block" src="/assets/css/burger.png" alt="Burger">
    <div class="container">
        <div class="row d-flex flex-wrap">
            <div class="col">

                <h2 class="text-center">Available Burgers!</h2>

                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col">
                <h2 class="text-center">Eaten Burgers!</h2>

                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="row text-center">
            <h2>Add a Burger</h2>
            <form class="create-form">

                <div class="form-group">
                    <label for="ca"></label>
                    <textarea id="ca" name="burger_name" cols="50" rows="2"
                        placeholder="What kind of berger do you want to add?"></textarea>
                </div>

                <button class="btn btn-outline-primary" type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>